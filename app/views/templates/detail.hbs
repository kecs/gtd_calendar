<h2>{{title}}
  <i id="remove" class="icon-remove pull-right" title="Completed"></i>
  <i class="icon-ok pull-right" title="Finish editing"></i>
</h2>
<h5 id="due-date">({{getDueDate this}})</h5>
<div id="datepicker"></div><br />

{{#if firstSteps}}
  <ol>
  {{#each firstSteps}}
    <li>{{this}}</li>
  {{/each}}
  </ol>
{{else}}
  <div class="alert">
  You must specify first steps!
  </div>
{{/if}}

<input type="text" placeholder="Step" />